@using TDV.Authorization
@using TDV.Web.Areas.Portal.Models.StokOlcus
@using TDV.Web.Areas.Portal.Startup
@model StokOlcusViewModel
@{
ViewBag.CurrentPageName = PortalPageNames.Common.StokOlcus;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/Portal/Views/StokOlcus/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("StokOlcus")' description='@L("StokOlcusHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_StokOlcus_Create))
    {
    <button id="CreateNewStokOlcuButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewStokOlcu")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="StokOlcusTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetStokOlcusButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MinAltFilterId">@L("MinMax") @L("Alt")</label>
                        <div class="input-group">
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MinValue")" name="minAltFilter" id="MinAltFilterId" />
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MaxValue")" name="maxAltFilter" id="MaxAltFilterId" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MinUstFilterId">@L("MinMax") @L("Ust")</label>
                        <div class="input-group">
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MinValue")" name="minUstFilter" id="MinUstFilterId" />
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MaxValue")" name="maxUstFilter" id="MaxUstFilterId" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DegerFilterId">@L("Deger")</label>
                        <input type="text" class="form-control reload-on-keyup" name="degerFilter" id="DegerFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="StokAdiFilterId">(@L("Stok")) @L("Adi")</label>
                        <input type="text" class="form-control" name="stokAdiFilter" id="StokAdiFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="OlcumOlcuTipiFilterId">(@L("Olcum")) @L("OlcuTipi")</label>
                        <input type="text" class="form-control" name="olcumOlcuTipiFilter" id="OlcumOlcuTipiFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="StokOlcusTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("Alt")</th>
                            <th>@L("Ust")</th>
                            <th>@L("Deger")</th>
                            <th>@L("StokAdi")</th>
                            <th>@L("OlcumOlcuTipi")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>