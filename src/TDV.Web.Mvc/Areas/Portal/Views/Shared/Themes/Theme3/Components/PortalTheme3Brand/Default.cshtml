@using TDV.Web.Areas.Portal.Models.Layout
@using TDV.Web.Areas.Portal.Views.Shared.Components.PortalLogo
@model HeaderViewModel
@{
    Layout = null;
    var theme = await GetTheme();
}
<a href="@Url.Action("Index", "Home", new {area = string.Empty})">
    @await Component.InvokeAsync(typeof(PortalLogoViewComponent), new
    {
        logoSkin = theme.BaseSettings.Layout.DarkMode ? "dark": "light", 
        logoClass = "h-30px logo theme-"+(theme.BaseSettings.Layout.DarkMode ? "dark": "light")+"-show"
    })
</a>
