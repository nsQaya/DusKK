@using TDV.Web.Areas.Portal.Models.Layout
@using TDV.Web.Areas.Portal.Views.Shared.Components.PortalLogo
@model HeaderViewModel
@{
    Layout = null;
    var skin = @Model.LoginInformations.Theme.BaseSettings.Layout.DarkMode ? "dark" : "light";
}
<a href="@Url.Action("Index", "Home", new {area = string.Empty})" class="brand-logo">
    @await Component.InvokeAsync(typeof(PortalLogoViewComponent), new
    {
        LogoSkin = skin + "-sm",
        LogoClass = "h-35px"
    })
</a>