@using TDV.Authorization
@using TDV.Web.Areas.Portal.Models.FuneralAddreses
@using TDV.Web.Areas.Portal.Startup
@model FuneralAddresesViewModel
@{
ViewBag.CurrentPageName = PortalPageNames.Common.FuneralAddreses;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/Portal/Views/FuneralAddreses/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("FuneralAddreses")' description='@L("FuneralAddresesHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_FuneralAddreses_Create))
    {
    <button id="CreateNewFuneralAddresButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewFuneralAddres")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="FuneralAddresesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetFuneralAddresesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                        <input type="text" class="form-control reload-on-keyup" name="descriptionFilter" id="DescriptionFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="AddressFilterId">@L("Address")</label>
                        <input type="text" class="form-control reload-on-keyup" name="addressFilter" id="AddressFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="FuneralDisplayPropertyFilterId">(@L("Funeral")) @L("DisplayProperty")</label>
                        <input type="text" class="form-control" name="funeralDisplayPropertyFilter" id="FuneralDisplayPropertyFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="QuarterNameFilterId">(@L("Quarter")) @L("Name")</label>
                        <input type="text" class="form-control" name="quarterNameFilter" id="QuarterNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="FuneralAddresesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("Description")</th>
                            <th>@L("Address")</th>
                            <th>@L("FuneralDisplayProperty")</th>
                            <th>@L("QuarterName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>